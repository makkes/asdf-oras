#!/usr/bin/env bash

set -euo pipefail

detect_arch() {
    machine=$(uname -m)
    case "${machine}" in
	x86_64)
	    echo "amd64"
	    ;;
	aarch64)
	    echo "arm64"
	    ;;
	*)
	    echo "${machine}"
	    ;;
    esac
}

detect_os() {
    case "$(uname)" in
        Linux)
            echo "linux"
	    ;;
        Darwin)
            echo "darwin"
	    ;;
    esac
}

cd "$ASDF_DOWNLOAD_PATH"
curl -Lo oras.tar.gz https://github.com/oras-project/oras/releases/download/v${ASDF_INSTALL_VERSION}/oras_${ASDF_INSTALL_VERSION}_"$(detect_os)_"$(detect_arch)".tar.gz
tar -xf oras.tar.gz
rm oras.tar.gz
