#!/usr/bin/env bash

set -euo pipefail

echo "downloading to $ASDF_DOWNLOAD_PATH" > /tmp/asdf-oras.log
cd "$ASDF_DOWNLOAD_PATH"
curl -Lo oras.tar.gz https://github.com/oras-project/oras/releases/download/v0.12.0/oras_0.12.0_linux_amd64.tar.gz
tar -xf oras.tar.gz
rm oras.tar.gz
ls -lhA >> /tmp/asdf-oras.log
